<view class="page-container">
  <!-- Header -->
  <view class="header-sticky">
    <view class="page-title">我的收藏</view>
    <view class="favorite-count" wx:if="{{!isEmpty}}">共 {{favoritesList.length}} 个项目</view>
  </view>

  <!-- Favorites List -->
  <view class="favorites-list" wx:if="{{!isEmpty}}">
    <view 
      wx:for="{{favoritesList}}" 
      wx:key="id" 
      class="favorite-card fade-in"
      style="animation-delay: {{index * 0.05}}s"
    >
      <view class="card-content" bindtap="goToDetail" data-id="{{item.id}}" data-type="{{item.type}}">
        <view class="card-image-container">
          <image class="card-image" src="{{item.image}}" mode="aspectFill" />
          <view class="card-type-badge">{{item.type === 'conditioning' ? '体能' : '技术'}}</view>
        </view>
        <view class="card-info">
          <view class="card-title">{{item.title}}</view>
          <view class="card-desc">{{item.description}}</view>
          <view class="card-tags">
            <text class="tag" wx:if="{{item.type === 'technical'}}">{{item.phase}}</text>
            <text class="tag" wx:else>{{item.intensity}}</text>
          </view>
        </view>
      </view>
      <view class="remove-btn" bindtap="removeFavorite" data-id="{{item.id}}">
        <text class="remove-icon">×</text>
      </view>
    </view>
  </view>

  <!-- Empty State -->
  <view class="empty-state" wx:else>
    <view class="empty-icon">♡</view>
    <view class="empty-title">暂无收藏</view>
    <view class="empty-desc">浏览训练项目，点击爱心即可收藏</view>
    <view class="empty-btn" bindtap="goHome">去看看</view>
  </view>
</view>
