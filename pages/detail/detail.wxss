/* pages/detail/detail.wxss */

.page-container {
  background: var(--bg-light);
  padding-bottom: 80rpx;
}

/* Immersive Hero Header */
.header-image-box {
  width: 100%;
  height: 520rpx;
  position: relative;
  overflow: hidden;
}

.header-image {
  width: 100%;
  height: 100%;
}

.header-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 160rpx;
  background: linear-gradient(to top, var(--bg-light), transparent);
}

.content-section {
  padding: 40rpx 32rpx;
  margin-top: -60rpx;
  border-radius: 48rpx 48rpx 0 0;
  background: var(--bg-light);
  position: relative;
  z-index: 10;
}

.title-section {
  margin-bottom: 40rpx;
  animation: fadeIn 0.6s ease-out;
}

.title-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 24rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-main);
  line-height: 1.3;
  margin-bottom: 24rpx;
  flex: 1;
}

.favorite-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.favorite-btn.active {
  background: linear-gradient(135deg, #ff6b6b, #ee5a5a);
  box-shadow: 0 4rpx 20rpx rgba(238, 90, 90, 0.4);
}

.favorite-icon {
  font-size: 40rpx;
  color: #cbd5e1;
  transition: all 0.3s ease;
}

.favorite-btn.active .favorite-icon {
  color: #ffffff;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  font-size: 22rpx;
  font-weight: 600;
  padding: 8rpx 24rpx;
  border-radius: 40rpx;
  background: #ffffff;
  color: var(--primary);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.03);
}

.description {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.7;
  margin-bottom: 60rpx;
  padding: 32rpx;
  background: #ffffff;
  border-radius: var(--radius-md);
  border-left: 10rpx solid var(--primary);
  box-shadow: var(--card-shadow);
  animation: fadeIn 0.7s ease-out;
}

/* Section Cards */
.detail-card {
  background: #ffffff;
  padding: 40rpx;
  border-radius: var(--radius-lg);
  margin-bottom: 40rpx;
  box-shadow: var(--card-shadow);
  animation: fadeIn 0.8s ease-out;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.card-icon {
  width: 8rpx;
  height: 32rpx;
  background: var(--primary);
  border-radius: 4rpx;
  margin-right: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
}

/* Setup Items */
.setup-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24rpx;
}

.setup-item {
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 6rpx;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.value {
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 500;
}

/* Steps List */
.step-item {
  display: flex;
  margin-bottom: 40rpx;
}

.step-num {
  width: 48rpx;
  height: 48rpx;
  background: var(--primary);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 700;
  flex-shrink: 0;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 82, 204, 0.3);
}

.step-content {
  flex: 1;
}

.step-text {
  font-size: 28rpx;
  color: var(--text-main);
  line-height: 1.6;
}

/* Variation & Tips Items */
.bullet-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.bullet-dot {
  color: var(--primary);
  margin-right: 16rpx;
  font-weight: bold;
}

.bullet-text {
  font-size: 27rpx;
  color: var(--text-main);
  line-height: 1.5;
}
