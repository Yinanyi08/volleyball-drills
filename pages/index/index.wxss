/* pages/index/index.wxss */

.page-container {
  padding-bottom: 40rpx;
}

/* Cleanup Header Logic */
.header-sticky {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  padding: 16rpx 0 24rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.02);
}

.nav-switch {
  display: flex;
  margin: 0 32rpx 24rpx 32rpx;
  background: #f1f5f9;
  border-radius: 20rpx;
  padding: 8rpx;
}

.nav-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  padding: 16rpx 0;
  color: #64748b;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.nav-item.active {
  background: #ffffff;
  color: #0052cc;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.nav-item.nav-favorite {
  flex: 0;
  width: 80rpx;
  background: linear-gradient(135deg, #ff6b6b, #ee5a5a);
  color: #ffffff;
}

.nav-favorite-icon {
  font-size: 28rpx;
}

.filter-wrapper {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.filter-scroll {
  white-space: nowrap;
  padding: 0 32rpx;
  display: flex !important;
}

.filter-tab {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 32rpx;
  background: #f1f5f9;
  border-radius: 40rpx;
  margin-right: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #64748b;
  transition: all 0.25s ease;
  flex-shrink: 0;
  border: 1rpx solid transparent;
}

/* Active States */
.filter-tab.active-age {
  background: #fff7ed;
  color: #ea580c;
  border-color: #fdba74;
  font-weight: 600;
}

.filter-tab.active-skill {
  background: #eff6ff;
  color: #1d4ed8;
  border-color: #93c5fd;
  font-weight: 600;
}

/* Drills List & Cards */
.drills-list {
  padding: 32rpx;
}

.drill-card {
  background: #ffffff;
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
  position: relative;
  border: 1rpx solid rgba(0, 0, 0, 0.02);
  animation: fadeIn 0.5s ease-out backwards;
}

.drill-image-container {
  position: relative;
  width: 100%;
  height: 400rpx;
  background: #f8fafc;
}

.drill-image {
  width: 100%;
  height: 100%;
}

.drill-image-gradient {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(
    to top,
    rgba(255, 255, 255, 1),
    rgba(255, 255, 255, 0)
  );
}

/* Card Favorite Button */
.card-favorite-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  z-index: 10;
}

.card-favorite-btn.active {
  background: linear-gradient(135deg, #ff6b6b, #ee5a5a);
  box-shadow: 0 4rpx 16rpx rgba(238, 90, 90, 0.4);
}

.card-favorite-icon {
  font-size: 32rpx;
  color: #94a3b8;
  transition: all 0.3s ease;
}

.card-favorite-btn.active .card-favorite-icon {
  color: #ffffff;
}

.drill-info {
  padding: 32rpx;
  padding-top: 8rpx;
}

.drill-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #0f172a;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.drill-desc {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.drill-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 20rpx;
  font-weight: 600;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

.category-tag {
  background: #f1f5f9;
  color: #475569;
}

.phase-tag {
  background: #f0fdf4;
  color: #16a34a;
}

/* Empty State */
.no-data {
  padding: 200rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #94a3b8;
  font-size: 28rpx;
}

.no-data-icon {
  margin-bottom: 24rpx;
  opacity: 0.5;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
